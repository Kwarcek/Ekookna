{% extends 'base.html.twig' %}

{% block title %}Panel administratora{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper pb-5 mb-5">
    <h2>Propozycje przystanków</h2>

<table class="table pt-5 mt-5">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Przystanek</th>
      <th scope="col">Opis</th>
      <th scope="col">Szczegóły</th>
    </tr>
  </thead>
  <tbody>
    {% for data in data %}
    <tr>
      <th scope="row">{{data.id}}</th>
      <td>{{data.address}}</td>
      <td>{{data.description}}</td>
      <td><a class="btn btn-success" href="{{ path('admin.show', {id: data.id}) }}">Szczegóły</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
</div>
{% endblock %}
